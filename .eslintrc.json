{
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {}
  },
  "plugins": ["prettier"],
  "extends": [
    "prettier",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": [2, {
        "arrowParens": "always",
        "bracketSameLine": true,
        "bracketSpacing": true,
        "jsxSingleQuote": false,
        "printWidth": 120,
        "proseWrap": "always",
        "quoteProps": "as-needed",
        "semi": false,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "useTabs": false,
        "vueIndentScriptAndStyle": true
      }
    ]
  }
}
